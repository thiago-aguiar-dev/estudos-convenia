{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],

      "@Events:components/*": ["./src/Events/components/*"],
      "@Events:routes/*": ["./src/Events/routes/*"],
      "@Events:services/*": ["./src/Events/services/*"],
      "@Events:utils/*": ["./src/Events/utils/*"]
    }
  }
}
